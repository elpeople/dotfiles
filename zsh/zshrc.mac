# macOS固有zsh設定
# ============================================================================

# macOS用PATH設定
export PATH="/opt/homebrew/bin:/usr/local/bin:$PATH"
export LC_ALL=en_US.UTF-8

# macOS用Homebrew設定
if [[ -d "/opt/homebrew/share/zsh-completions" ]]; then
  fpath=(/opt/homebrew/share/zsh-completions $fpath)
fi