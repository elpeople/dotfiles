    // Selection colors
    selection_bg: Rgb(49, 50, 68),          // surface0
    selection_fg: Rgb(205, 214, 244),       // text
    
    // Progress bars
    progress_bg: Rgb(69, 71, 90),           // surface1
    progress_fg: Rgb(137, 180, 250),        // blue
    
    // Volume bar
    volume_bg: Rgb(69, 71, 90),             // surface1
    volume_fg: Rgb(148, 226, 213),          // teal
    
    // Tabs
    tab_active_bg: Rgb(49, 50, 68),         // surface0
    tab_active_fg: Rgb(137, 180, 250),      // blue
    tab_inactive_bg: Rgb(30, 30, 46),       // base
    tab_inactive_fg: Rgb(108, 112, 134),    // overlay0
    
    // Player status
    playing: Rgb(166, 227, 161),            // green
    paused: Rgb(249, 226, 175),             // yellow
    stopped: Rgb(108, 112, 134),            // overlay0
    
    // Highlight colors
    highlight: Rgb(245, 194, 231),          // pink
    highlight_bg: Rgb(69, 71, 90),          // surface1
