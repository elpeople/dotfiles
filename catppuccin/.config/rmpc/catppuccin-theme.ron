// Catppuccin Mocha theme configuration for rmpc
Some((
    // Base colors
    bg: Rgb(30, 30, 46),                    // base
    fg: Rgb(205, 214, 244),                 // text
    
    // Primary UI colors
    primary: Rgb(137, 180, 250),            // blue
    secondary: Rgb(203, 166, 247),          // mauve
    
    // Status and state colors
    success: Rgb(166, 227, 161),            // green
    warning: Rgb(249, 226, 175),            // yellow
    error: Rgb(243, 139, 168),              // red
    info: Rgb(148, 226, 213),               // teal
    
    // Border colors
    border_primary: Rgb(108, 112, 134),     // overlay0
    border_secondary: Rgb(69, 71, 90),      // surface1
